
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">

        <section class="row" style="margin-bottom: 30px;">

            <div class="col-lg-8 offset-lg-2 col-sm-12">

                <h1 class="display-4 text-center">Admin Pizzaria Premiato</h1>
                <hr>
                @if (TempData["MensagemErro"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["MensagemErro"]
                    </div>
                }
                    <form method="post" action="@Url.Action("Login", "Admin")">
                        <div class="form-group">
                            <label for="email" style="font-weight:bold">E-mail</label>
                            <input class="form-control mb-3" type="text" name="email" value="" id="email" placeholder="Digite o seu email">
                            @Html.ValidationMessage("email", new { @class = "text-danger" })

                        </div>

                        <div class="form-group ">
                            <label for="email" style="font-weight:bold">Senha</label>
                            <input class="form-control mb-" type="text" name="senha" value="" id="senha" placeholder="Digite a sua senha">

                            @Html.ValidationMessage("senha", new { @class = "text-danger" })
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary my-3 float-end btn-block">Entrar</button>
                        </div>
                    </form>

                @ViewBag.Mensagem

            </div>
        </section>
    </div>

</body>
</html>

